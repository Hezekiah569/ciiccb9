package RemoveVowelsAndConsonants;

import java.util.Scanner;

public class CheckVAndC {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        while (true) {
            System.out.print("Type 'v' for vowels and 'c' for consonants (-1 to exit): ");
            String userInput = sc.nextLine();

            if (userInput.equals("v")) {
                System.out.println("Please enter a word to remove vowels: ");
                String vowContainer = sc.nextLine();
                String vowels = vowContainer.replaceAll("[aeiou]", "");
                System.out.println("Without vowels: " + vowels);
            } else if (userInput.equals("c")) {
                System.out.println("Please enter a word to remove consonants: ");
                String consoContainer = sc.nextLine();
                String consonants = consoContainer.replaceAll("[bcdfghjklmnpqrstvwxyz]", "");
                System.out.println("Without consonants: " + consonants);
            } else if (userInput.equals("-1")) {
                System.out.println("Thank you for using my v/c letter remover!");
                break;
            } else {
                System.out.println("Invalid input. Please try again.");
            }
        }
    }
}